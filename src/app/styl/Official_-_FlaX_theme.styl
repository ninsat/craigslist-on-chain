// POPCORN-THEME: FLAX

//FLAX Color scheme
    Green = #323a45 //bars
    LightGreen = #656d78 //small bar
    DarkGreen = #191d22 //bg
    LightGrey = #a5a9b0 //text
    DarkGrey = #555b65 //inactive text
    White = #f5f7fa //bg
    Rose = #de5362 //colored
    

//Fonts
    $Font = 'Open Sans'
    $MainFont = 'Open Sans Semibold'
    $MainFontBold = 'Open Sans Bold'
    $AlternateFont = sans-serif    
    $ButtonFont = 'Open Sans Semibold'

//Main app
    $BgColor1 = DarkGreen //big bg
    $BgColor2 = Green //useless??

    $Text1 = White //poster title
    $Text2 = LightGrey //caret
    $Text3 = LightGrey //icon settings
    $Text4 = darken(LightGrey,5) //poster sub-title
    $TextError = Green //not found

    $CloseButton = Rose //#e74c3c
    $CloseButtonHover = darken(Rose,5) //#c0392b
    
    $SpinnerColor1 = rgba(#fff,.2)
    $SpinnerColor2 = Rose

    $ScrollBarBg = Green //darken(White,10)
    $ScrollBarThumb = LightGreen
    $ScrollBarThumbHover = Rose

//Top Bar
    $TitleBarBg = Green
    $TitleBarText = #fff
    $FullScreenButton = #fff
    $FullScreenButtonHover = Rose

    $FilterBarBg = Green
    $FilterBarText = #fff
    $FilterBarTextHover = Rose
    $FilterBarActive = Rose

    $SearchBoxBg = rgba(#000,.2)

    $DropDownBg = Green
    $DropDownBgHover = LightGrey
    $DropDownTextHover = White
    $DropDownText = lighten(LightGrey,10)
    $DropDownOpacity = 1.00

    $FilterBarIcon = lighten(LightGrey,10)
    $FilterBarIconHover = Rose
	$FilterBarIcon-PosterWidth = Rose
    
    $TopBarShadow = 0px 6px 8px -4px rgba(0, 0, 0, 0)

//Buttons
    $ButtonBg = Rose
    $ButtonBgHover = darken(Rose,5)
    $ButtonBgActive = darken(Rose,9)
    
    $ButtonBgDisabled = #d1d5d8
    $ButtonBgDisabled = #d1d5d8
    
    $ButtonText = #fff
    $ButtonTextHover = #fff
    
    $ButtonRadius = 3px

//Posters
    $PosterRadius = 0px
    $PosterHoverBorder = Rose
    $PosterHoverOverlay = rgba(#333, .5)
    $PosterShadow = 0px 0px 0px

//TV Series
    $ShowBgColor1 = lighten(DarkGreen,3)
    $ShowBgColor2 = lighten(DarkGreen,7)

    $EpisodeDetailsBg = lighten(DarkGreen,3)
    
    $ShowText1 = White
    $ShowText2 = LightGrey

    $SaisonListText = White
    $EpisodeListText = White
    
    $EpisodeSelectorBg = Rose
	$EpisodeSelectorHover = lighten($ShowBgColor2,6%)
    $EpisodeSelectorText = #fff

	$ShowWatchedIcon_false = rgba(White,0.3)
	$ShowWatchedIcon_hover = rgba(White,0.6) 
	$ShowWatchedIcon_true = White

//File selector
	$FileSelectorText = darken(White,5)
	$FileSelectorBg = rgba(0,0,0, 0)
	$FileSelectorShadow = rgba(0, 0, 0, 0)

//Settings
    $SettingsCategoriesText = White
    $SettingsSeparator = rgba(#fff,.1)

    $InputBoxBg = darken(Green,4)
    $InputBoxText = White
    
    $SettingsText1 = darken(White,5)
    $SettingsText2 = rgba(darken(White,5),.7)

    $SettingsButtonText = #fff
    $SettingsButtonTextHover = #fff

//Misc
    $FavoriteColor = #e74c3c

    $PngLogo = brightness(1.3)
    
//Player
	$PlayerColor = Rose


